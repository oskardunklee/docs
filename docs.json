{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Stanna Docs",
  "colors": {
    "primary": "#0EA5E9",
    "light": "#7DD3FC",
    "dark": "#0369A1"
  },
  "favicon": "/favicon.svg",
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      { "label": "Support", "href": "mailto:support@gostanna.com" }
    ],
    "primary": {
      "type": "button",
      "label": "Open app",
      "href": "https://app.gostanna.com"
    }
  },
  "contextual": { "options": ["copy", "view", "chatgpt", "claude", "perplexity", "mcp", "cursor", "vscode"] },
  "styling": { "eyebrows": "breadcrumbs" },
  "navigation": {
    "global": {
      "anchors": [
        { "anchor": "Website", "href": "https://gostanna.com", "icon": "globe" },
        { "anchor": "Open app", "href": "https://app.gostanna.com", "icon": "arrow-up-right-from-square" }
      ]
    },
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart",
              "concepts/workspaces",
              "concepts/health-score",
              "concepts/sentiment"
            ]
          },
          {
            "group": "Setup",
            "pages": [
              "setup/requirements",
              "setup/environments",
              "setup/domains",
              "setup/cors",
              "setup/sso"
            ]
          },
          {
            "group": "Integrations",
            "pages": [
              "integrations/google-workspace",
              "integrations/gmail",
              "integrations/slack",
              "integrations/hubspot",
              "integrations/intercom"
            ]
          },
          {
            "group": "Data & ingestion",
            "pages": [
              "data/sources",
              "data/backfill",
              "data/sync-freshness",
              "data/deletion-retention"
            ]
          },
          {
            "group": "Using Stanna",
            "pages": [
              "product/clients",
              "product/segments",
              "product/tags",
              "product/tasks",
              "product/upcoming-events",
              "product/stakeholders",
              "product/next-best-actions",
              "product/score-attribution"
            ]
          },
          {
            "group": "Troubleshooting",
            "pages": [
              "troubleshooting/common-errors",
              "troubleshooting/oauth",
              "troubleshooting/gmail-quota"
            ]
          }
        ]
      },
      {
        "tab": "Admin",
        "groups": [
          {
            "group": "Workspace admin",
            "pages": [
              "admin/roles-permissions",
              "admin/billing",
              "admin/audit-logs",
              "admin/security-compliance"
            ]
          },
          {
            "group": "Configuration",
            "pages": [
              "admin/settings",
              "admin/webhooks",
              "admin/risk-thresholds",
              "admin/notifications"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "openapi": "api-reference/openapi.json",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/introduction",
              "api-reference/authentication",
              "api-reference/rate-limits"
            ]
          },
          {
            "group": "Metrics",
            "pages": [
              "GET /metrics/summary",
              "GET /metrics/trends/health",
              "GET /metrics/trends/sentiment",
              "GET /metrics/trends/interactions"
            ]
          },
          {
            "group": "Clients",
            "pages": [
              "GET /clients",
              "GET /clients/{id}",
              "POST /clients",
              "PATCH /clients/{id}",
              "GET /clients/{id}/history"
            ]
          },
          {
            "group": "Integrations",
            "pages": [
              "GET /integrations",
              "POST /integrations/google/authorize",
              "GET /integrations/google/callback"
            ]
          },
          {
            "group": "Webhooks",
            "pages": [
              "webhooks/overview",
              "webhooks/events/client.updated",
              "webhooks/events/metric.calculated"
            ]
          }
        ]
      }
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/gostanna",
      "github": "https://github.com/gostanna",
      "linkedin": "https://www.linkedin.com/company/gostanna"
    }
  }
}
